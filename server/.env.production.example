# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Server Configuration
PORT=8000
NODE_ENV=production

# MongoDB Atlas Configuration
# Replace with your actual MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@document-ai-staging.mongodb.net/form-autofill-staging?retryWrites=true&w=majority

# AI Provider Configuration
AI_PROVIDER=google
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# GCP Configuration (if using Google Cloud services)
GCP_PROJECT_ID=document-ai-staging
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-service-account.json

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Security Configuration
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters-long
JWT_SECRET=your-jwt-secret-for-authentication-minimum-32-characters

# CORS Configuration
CORS_ORIGIN=https://staging.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration  
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Optional: Analytics and Monitoring
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Optional: Email Configuration (for notifications)
# EMAIL_FROM=noreply@yourdomain.com
# SENDGRID_API_KEY=your-sendgrid-api-key
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Database Configuration
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# Feature Flags
ENABLE_FILE_CLEANUP=true
ENABLE_CHAT_HISTORY=true
ENABLE_ANALYTICS=false